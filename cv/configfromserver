server {
    listen 80;
    server_name cv.sergeyladutko.xyz ;

    access_log /var/log/nginx/cv.sergeyladutko.access.log;
    error_log /var/log/nginx/cv.sergeyladutko.error.log;

    add_header  X-Robots-Tag "noindex, nofollow, nosnippet, noarchive";

    location ~ /\.git {
        deny all;
    }

    location ~ /\.ht {
        deny all;
    }

    proxy_set_header Host               $host;
    proxy_set_header X-Real-IP          $remote_addr;
    proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;

    client_max_body_size       50m;

    location / {
        proxy_pass http://127.0.0.1:1111;        
    }
    location = /admin/ {
        proxy_pass http://127.0.0.1:1111/custom_404.html;
    }
}


